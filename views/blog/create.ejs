<% include ../partials/header %>

<div class="container">
  <div class="blog-form-width mt-3">
    <div class="card animated zoomIn faster">
      <div class="card-content">
        <span class="card-title"><p class="form-title">Create Blog</p></span>
        <form action="/blog" method="POST" class="col s12" enctype="multipart/form-data">
          <div class="row">
            <div class="input-field col s12">
              <input id="title" type="text" name="blog[title]" class="validate">
              <label for="title">Title</label>
            </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <textarea id="content" name="blog[body]" class="materialize-textarea"></textarea>
                  <label for="content">Body</label>
              </div>
          </div>
          <div class="row">
              <div class="file-field input-field">
                  <div class="btn indigo darken-4">
                    <span>Image</span>
                    <input type="file" name="image" accept="image/*">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                  </div>
              </div>
          </div>
          <div class="row">
            <div class="input-field center col s12">
              <button class="waves-effect waves-light btn-large indigo darken-4">
                Submit
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<% include ../partials/footer %>