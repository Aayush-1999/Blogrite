<% include ./partials/header %>

<div class="container-home">
    <section class="mt-3">
        <% for(let i=0;i<blogs.length;i+=6){ %>
        <div class="row">
            <% if(blogs[i]!=null){%>
                <div class="col s12">
                    <a class="card-link" href="/blog/<%=blogs[i]._id%>" >
                        <div class="card horizontal hvr-grow">
                            <div class="card-image card-image-horizontal">
                                <img src="<%= blogs[i].image %>" style="height: 365px;">
                            </div>
                            <div class="card-stacked">
                                <div class="card-content">
                                    <span class="card-title center"><%= blogs[i].title %></span>
                                    <p class="blog_content_old" style="display: none;"><%= blogs[i].body.substring(0,500)+"..." %></p>
                                    <p class="blog_content_new"></p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
            <% if(blogs[i+1]!=null){%>
                <div class="col s12 m6 l4">
                    <a class="card-link" href="/blog/<%=blogs[i+1]._id%>" >
                        <div class="card card-three hvr-grow">
                            <div class="card-image">
                                <img src="<%= blogs[i+1].image %>" style="height: 164px;" >
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= blogs[i+1].title %></span>
                                <p class="blog_content_old" style="display: none;"><%= blogs[i+1].body.substring(0,200)+"..." %></p>
                                <p class="blog_content_new"></p>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
            <% if(blogs[i+2]!=null){%>
                <div class="col s12 m6 l4">
                    <a class="card-link" href="/blog/<%=blogs[i+2]._id%>" >
                        <div class="card card-three hvr-grow">
                            <div class="card-image">
                                <img src="<%= blogs[i+2].image %>" style="height: 164px;">
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= blogs[i+2].title %></span>                        
                                <p class="blog_content_old" style="display: none;"><%= blogs[i+2].body.substring(0,200)+"..." %></p>
                                <p class="blog_content_new"></p>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
            <% if(blogs[i+3]!=null){%>
                <div class="col s12 m6 l4">
                    <a class="card-link" href="/blog/<%=blogs[i+3]._id%>" >
                        <div class="card card-three hvr-grow">
                            <div class="card-image">
                                <img src="<%= blogs[i+3].image %>" style="height: 164px;">
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= blogs[i+3].title %></span>
                                <p class="blog_content_old" style="display: none;"><%= blogs[i+3].body.substring(0,200)+"..." %></p>
                                <p class="blog_content_new"></p>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
            <% if(blogs[i+4]!=null){%>
                <div class="col s12 m6 l6">
                    <a class="card-link" href="/blog/<%=blogs[i+4]._id%>" >
                        <div class="card  hvr-grow">
                            <div class="card-image">
                                <img src="<%= blogs[i+4].image %>"  style="height: 230px;">
                            </div>
                            <div class="card-content">
                                    <span class="card-title"><%= blogs[i+4].title %></span>
                                <p class="blog_content_old" style="display: none;"><%= blogs[i+4].body.substring(0,250)+"..." %></p>
                                <p class="blog_content_new"></p>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
            <% if(blogs[i+5]!=null){%>
                <div class="col s12 m6 l6">
                    <a class="card-link" href="/blog/<%=blogs[i+5]._id%>" >
                        <div class="card  hvr-grow">
                            <div class="card-image">
                                <img src="<%= blogs[i+5].image %>" style="max-height: 230px;">
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= blogs[i+4].title %></span>
                                <p class="blog_content_old" style="display: none;"><%= blogs[i+5].body.substring(0,250)+"..." %></p>
                                <p class="blog_content_new"></p>
                            </div>
                        </div>
                    </a>
                </div>
            <%}%>
        </div><% } %>
    </section>
</div>

<script>
    $(document).ready(function(){
        var blogs_length=<%=blogs.length%>;
        var blog_body=document.getElementsByClassName("blog_content_old");
        var blog_body_new=document.getElementsByClassName("blog_content_new");
        for(i=0;i<blogs_length;i++){
            blog_body_new[i].innerHTML=blog_body[i].innerText;
        }
    })
</script>

<% include ./partials/footer %>
